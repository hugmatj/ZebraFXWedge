<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FXWedgeSetupActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <Switch
        android:id="@+id/startOnBootSwitch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:text="Auto-start after reboot"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/tv_serverport"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/startOnBootSwitch"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:text="Server Port: "
        android:textSize="24sp" />

    <EditText
        android:id="@+id/et_serverport"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/startOnBootSwitch"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:layout_toLeftOf="@id/tv_serverport"
        android:layout_toEndOf="@+id/tv_serverport"
        android:layout_toRightOf="@+id/tv_serverport"
        android:text="5000"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/tv_fxName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/et_serverport"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:text="FX Name: "
        android:textSize="24sp" />

    <EditText
        android:id="@+id/et_fxname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/et_serverport"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:layout_toLeftOf="@id/tv_fxIP"
        android:layout_toEndOf="@+id/tv_fxIP"
        android:layout_toRightOf="@+id/tv_fxIP"
        android:text="FX7500FCDA1B"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/tv_fxIP"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_fxName"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:text="FX IP: "
        android:textSize="24sp" />

    <EditText
        android:id="@+id/et_fxip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_fxName"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:layout_toLeftOf="@id/tv_fxIP"
        android:layout_toEndOf="@+id/tv_fxIP"
        android:layout_toRightOf="@+id/tv_fxIP"
        android:text="127.0.0.1"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/tv_fxLogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/et_fxip"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:text="FX Login: "
        android:textSize="24sp" />

    <EditText
        android:id="@+id/et_fxlogin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/et_fxip"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:layout_toLeftOf="@id/tv_fxLogin"
        android:layout_toEndOf="@+id/tv_fxLogin"
        android:layout_toRightOf="@+id/tv_fxLogin"
        android:text="admin"
        android:textSize="24sp" />


    <TextView
        android:id="@+id/tv_fxpassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/et_fxlogin"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:text="FX Password: "
        android:textSize="24sp" />

    <EditText
        android:id="@+id/et_fxpassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/et_fxlogin"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:layout_toLeftOf="@id/tv_fxpassword"
        android:layout_toEndOf="@+id/tv_fxpassword"
        android:layout_toRightOf="@+id/tv_fxpassword"
        android:text="change"
        android:textSize="24sp" />

    <CheckBox
        android:id="@+id/cb_allow_forwarding"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/et_fxpassword"
        android:layout_marginTop="5dp"
        android:text="Forward FXData"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/tv_forwardIP"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/cb_allow_forwarding"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:text="Forward IP: "
        android:textSize="24sp" />

    <EditText
        android:id="@+id/et_forwardip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/cb_allow_forwarding"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:layout_toLeftOf="@id/tv_forwardIP"
        android:layout_toEndOf="@+id/tv_forwardIP"
        android:layout_toRightOf="@+id/tv_forwardIP"
        android:text="127.0.0.1"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/tv_forwardport"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_forwardIP"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:text="Forward Port: "
        android:textSize="24sp" />

    <EditText
        android:id="@+id/et_forwardport"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_forwardIP"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:layout_toLeftOf="@id/tv_forwardport"
        android:layout_toEndOf="@+id/tv_forwardport"
        android:layout_toRightOf="@+id/tv_forwardport"
        android:text="5000"
        android:textSize="24sp" />

    <CheckBox
        android:id="@+id/cb_allow_iotaforwarding"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/et_forwardport"
        android:layout_marginTop="5dp"
        android:text="Forward to IOTA"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/tv_iotaserver"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/cb_allow_iotaforwarding"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:text="IOTA Server: "
        android:textSize="24sp" />

    <EditText
        android:id="@+id/et_iotaserver"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_iotaserver"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:text="https://sandbox-api.zebra.com/v2/ledger/tangle"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/tv_apikey"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/et_iotaserver"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:text="API Key: "
        android:textSize="24sp" />

    <EditText
        android:id="@+id/et_apikey"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_apikey"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:text="EbJbpyTL9C1oBXTYy5GxWhKk8AKNSM4n"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/tv_latitude"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/et_apikey"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:text="Device latitude: "
        android:textSize="24sp" />

    <EditText
        android:id="@+id/et_latitude"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/et_apikey"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:layout_toLeftOf="@id/tv_latitude"
        android:layout_toEndOf="@+id/tv_latitude"
        android:layout_toRightOf="@+id/tv_latitude"
        android:text="-30.21515"
        android:textSize="24sp" />

   <TextView
        android:id="@+id/tv_longitude"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/et_latitude"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:text="Device Longitude: "
        android:textSize="24sp" />

    <EditText
        android:id="@+id/et_longitude"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/et_latitude"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:layout_toLeftOf="@id/tv_longitude"
        android:layout_toEndOf="@+id/tv_longitude"
        android:layout_toRightOf="@+id/tv_longitude"
        android:text="-30.21515"
        android:textSize="24sp" />

        <LinearLayout
            android:id="@+id/ll_buttons0"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/et_longitude"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">


            <Button
                android:id="@+id/bt_save"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"
                android:text="Apply\nSettings" />

            <Button
                android:id="@+id/bt_getlocation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"
                android:text="Get device \nlocation" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_buttons"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/ll_buttons0"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">


            <Button
                android:id="@+id/bt_import"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"
                android:text="Import Config\nfrom file" />

            <Button
                android:id="@+id/bt_export"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"
                android:text="Export Config\nto file" />

            <Button
                android:id="@+id/bt_delete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"
                android:text="Delete config\nfile" />

        </LinearLayout>
    </RelativeLayout>
</ScrollView>